{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules",
    "stylelint-config-clean-order"
  ],
  "ignoreFiles": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "apply",
          "tailwind",
          "components",
          "utilities",
          "screen"
        ]
      }
    ],
    "no-descending-specificity": null
  }
}
