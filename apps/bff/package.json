{
  "name": "@code-sync/bff",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "pnpm codegen && pnpm type-check && tsup ./src/index.ts && pnpm copy-schema",
    "codegen": "tsx ./scripts/mergeSchemas.ts && graphql-codegen",
    "copy-schema": "copyfiles -u 2 -f ./src/graphql/schemas/schema.graphql dist/",
    "dev": "tsup ./src/index.ts --watch --onSuccess \"pnpm codegen && pnpm copy-schema && cross-env NODE_ENV=development node dist/index.mjs\"",
    "lint": "pnpm type-check && eslint --cache --cache-location ./.eslintcache --cache-strategy content . --ext ts,graphql",
    "lint:fix": "pnpm lint --fix",
    "start": "cross-env NODE_ENV=production node dist/index.mjs",
    "test": "cross-env NODE_ENV=test vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "4.9.4",
    "@code-sync/api": "workspace:*",
    "@code-sync/logger": "workspace:*",
    "@graphql-tools/graphql-file-loader": "8.0.1",
    "@graphql-tools/load": "8.0.2",
    "@graphql-tools/merge": "9.0.0",
    "@graphql-tools/schema": "10.0.2",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.18.2",
    "glob": "10.3.10",
    "gql.tada": "1.4.1",
    "graphql": "16.8.1",
    "pino-http": "9.0.0",
    "pino-http-print": "3.1.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "1.7.1",
    "@code-sync/eslint-config": "workspace:*",
    "@code-sync/typescript-config": "workspace:*",
    "@code-sync/vitest-config": "workspace:*",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/graphql": "14.5.0",
    "@types/morgan": "1.9.9",
    "@types/node": "20.11.30",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "@vitest/coverage-v8": "1.4.0",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "supertest": "6.3.4",
    "supertest-graphql": "1.1.4",
    "tsup": "8.0.2",
    "tsx": "4.7.1",
    "typescript": "5.3.2",
    "vitest": "1.4.0"
  }
}
